<%= form_tag(libros_path, :method => "get", id: "search-form") do %>
  <div class="row">
    <div class="col-md-3">
      <%= text_field_tag :search_titulo, params[:search_titulo], class: "form-control", placeholder: "Search Titulo" %>
    </div>
    <div class="col-md-3">
       <%= text_field_tag :search_autor, params[:search_autor], class: "form-control", placeholder: "Search Autor" %>
    </div>
    <div class="col-md-3">
      <%= text_field_tag :search_isbn, params[:search_isbn], class: "form-control", placeholder: "Search ISBN" %>
    </div>
    <div class="col-md-3">
       <%= submit_tag "Go!", class: "btn btn-danger"  %>
    </div>
  </div>
<% end %>

<% if @libros_busqueda.present? %>
  <div class="page-header">
    <%= link_to new_libro_path, class: 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-plus"></span>
      New Libro
    <% end %>
    <h1>Listing libros</h1>
  </div>

  <div class="container marketing">
    <div class="row">
      <%= content_tag_for(:tr, @libros_busqueda) do |libro| %>
        <div class="col-lg-4">
          <div class="thumbnail">
            <%= image_tag libro.image.url(:medium) %>
            <div class="caption">
              <h3><%= libro.titulo %></h3>
              <strong>Autor:</strong> <p><%= libro.autor %></p>
              <strong>ISBN:</strong><p><%= libro.ISBN %></p>
              <p><a><%= link_to 'View libro »', libro, class: "btn btn-primary" %></a></p>
            </div>
          </div>
        </div>
      <% end %>
    </div><!-- /.row -->
  </div>
<% else %>
  <div class="page-header">
    <%= link_to new_libro_path, class: 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-plus"></span>
      New Libro
    <% end %>
    <h1>Listing libros</h1>
  </div>
  <div class="container marketing">
    <div class="row">
      <%= content_tag_for(:tr, @libros) do |libro| %>
        <div class="col-lg-4">
          <div class="thumbnail">
            <%= image_tag libro.image.url(:medium) %>
            <div class="caption">
              <h3><%= libro.titulo %></h3>
              <strong>Autor:</strong> <p><%= libro.autor %></p>
              <strong>ISBN:</strong><p><%= libro.ISBN %></p>
              <p><a><%= link_to 'View libro »', libro, class: "btn btn-primary" %></a></p>
            </div>
          </div>
        </div>
      <% end %>
    </div><!-- /.row -->
  </div>
<% end %>
